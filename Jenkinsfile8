pipeline {
  agent { node { label 'kiuwan01' } }
  stages {
    stage('Checkout') {
      steps {
        dir("${env.WORKSPACE}/orion-api"){
          script {
             // The below will clone your repo and will be checked out to master branch by default.
             git credentialsId: 'SpirentOrionCI', url: 'git@github.com:SpirentOrion/orion-api.git'
             // Do a ls -lart to view all the files are cloned. It will be clonned. This is just for you to be sure about it.
             sh "ls -lat ./*" 
             // List all branches in your repo. 
             sh "git branch -a"
          }
        }
      }
    }
    stage('Build') {
      steps {
        dir("${env.WORKSPACE}"){
          // kiuwan applicationName: 'aion8', connectionProfileUuid: 'EWH8-uwXs', failureThreshold: 40.0, sourcePath: './orion-api', timeout: 1440, unstableThreshold: 90.0
          // kiuwan applicationName_dm: 'aion8', branch_dm: 'main', changeRequest_dm: '727d768', connectionProfileUuid: 'EWH8-uwXs', selectedMode: 'DELIVERY_MODE', sourcePath: './orion-api', timeout_dm: 1440
          kiuwan commandArgs_em: '-c -n "${JOB_NAME}" -l "#${BUILD_NUMBER}" --bomFile "/home/ubuntu/jenkins/workspace/aion8/aion8.bom" --bomFormat "raw"', connectionProfileUuid: 'EWH8-uwXs', selectedMode: 'EXPERT_MODE', sourcePath: './orion-api', timeout_em: 1440
        }
      }
    }
  }
}
